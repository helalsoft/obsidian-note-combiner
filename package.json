{
  "name": "obsidian-note-combiner",
  "version": "1.0.0",
  "description": "Combine markdown files in a folder into a single note",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "zip": "npm run build && bestzip obsidian-note-combiner.zip main.js manifest.json"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin"
  ],
  "author": "Helalsoft",
  "license": "MIT",
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "bestzip": "^2.2.1",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "minimatch": "^9.0.3",
    "obsidian": "latest",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "minimatch": "^9.0.3"
  }
}
